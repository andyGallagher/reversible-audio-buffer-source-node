{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": false,
        "noEmit": true,
        /* If transpiling with TypeScript: */
        "module": "Preserve"
    },
    "include": ["src"]
}
