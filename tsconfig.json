{
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "types": [
      "node",
    ],
    "paths": {
      "@/*": [
        "./src/*",
      ],
    },
  },
  "include": [
    "src"
  ]
}